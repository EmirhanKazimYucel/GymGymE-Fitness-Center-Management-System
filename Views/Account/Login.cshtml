@model WebProje.Models.AuthPageViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    ViewData["BodyClass"] = "login-body";
    var activeTab = (ViewData["ActiveTab"] as string ?? "login").ToLowerInvariant();
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="login-shell">
    <div class="login-art">
        <img src="~/images/barbie.png" alt="Gymgyme karakter illüstrasyonu" />
    </div>
    <div class="login-stage">
        <div class="login-badge">
            <div class="badge-glow"></div>
            <div class="auth-tabs" role="tablist">
                <button type="button"
                        class="tab-btn tab-login @(activeTab == "login" ? "active" : string.Empty)"
                        data-target="login-panel"
                        aria-label="Giriş Yap"
                        aria-pressed="@(activeTab == "login" ? "true" : "false")">
                    <span class="sr-only">Giriş Yap</span>
                </button>
                <button type="button"
                        class="tab-btn tab-register @(activeTab == "register" ? "active" : string.Empty)"
                        data-target="register-panel"
                        aria-label="Kayıt Ol"
                        aria-pressed="@(activeTab == "register" ? "true" : "false")">
                    <span class="sr-only">Kayıt Ol</span>
                </button>
            </div>

            <div class="badge-body">
                @if (TempData["RegisterSuccess"] is string successMessage)
                {
                    <div class="credentials-hint success">
                        @successMessage
                    </div>
                }

                <div id="login-panel" class="auth-panel @(activeTab == "login" ? "active" : string.Empty)">

                    <form asp-action="Login" method="post" novalidate>
                        <input type="hidden" asp-for="Login.ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="validation"></div>

                        <label asp-for="Login.Email"></label>
                        <input asp-for="Login.Email" autocomplete="email" />
                        <span asp-validation-for="Login.Email" class="validation"></span>

                        <label asp-for="Login.Password"></label>
                        <input asp-for="Login.Password" autocomplete="current-password" />
                        <span asp-validation-for="Login.Password" class="validation"></span>

                        <button type="submit">Giriş Yap</button>
                    </form>

                    <div class="credentials-hint">
                        <strong>Test hesapları</strong>
                        <div>demo@fitapp.com / demo123</div>
                        <div>admin@fitapp.com / admin123</div>
                    </div>
                </div>

                <div id="register-panel" class="auth-panel @(activeTab == "register" ? "active" : string.Empty)">

                    <form asp-action="Register" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="validation"></div>

                        <div class="form-row">
                            <div>
                                <label asp-for="Register.FirstName"></label>
                                <input asp-for="Register.FirstName" autocomplete="given-name" />
                                <span asp-validation-for="Register.FirstName" class="validation"></span>
                            </div>
                            <div>
                                <label asp-for="Register.LastName"></label>
                                <input asp-for="Register.LastName" autocomplete="family-name" />
                                <span asp-validation-for="Register.LastName" class="validation"></span>
                            </div>
                        </div>

                        <label asp-for="Register.Email"></label>
                        <input asp-for="Register.Email" autocomplete="email" />
                        <span asp-validation-for="Register.Email" class="validation"></span>

                        <label asp-for="Register.PhoneNumber"></label>
                        <input asp-for="Register.PhoneNumber" autocomplete="tel" />
                        <span asp-validation-for="Register.PhoneNumber" class="validation"></span>

                        <label asp-for="Register.BirthDate"></label>
                        <input asp-for="Register.BirthDate" type="date" />
                        <span asp-validation-for="Register.BirthDate" class="validation"></span>

                        <div class="form-row">
                            <div>
                                <label asp-for="Register.Password"></label>
                                <input asp-for="Register.Password" autocomplete="new-password" />
                                <span asp-validation-for="Register.Password" class="validation"></span>
                            </div>
                            <div>
                                <label asp-for="Register.ConfirmPassword"></label>
                                <input asp-for="Register.ConfirmPassword" autocomplete="new-password" />
                                <span asp-validation-for="Register.ConfirmPassword" class="validation"></span>
                            </div>
                        </div>

                        <button type="submit">Kaydı Tamamla</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.auth-tabs .tab-btn').forEach(function (btn) {
            btn.addEventListener('click', function () {
                const target = this.dataset.target;
                document.querySelectorAll('.auth-tabs .tab-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                document.querySelectorAll('.auth-panel').forEach(panel => {
                    panel.classList.toggle('active', panel.id === target);
                });
            });
        });
    </script>
}
