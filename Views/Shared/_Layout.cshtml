<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProje</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProje.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Playfair+Display:wght@600&display=swap">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="fergus-header">
        <div class="fergus-nav">
            <div class="fergus-nav-group">
                <a class="fergus-pill" asp-area="" asp-controller="Home" asp-action="Index">Market</a>
                <a class="fergus-link" asp-area="" asp-controller="Home" asp-action="Index">Flyer</a>
                <a class="fergus-link" asp-area="" asp-controller="Home" asp-action="Privacy">Business</a>
                <a class="fergus-link" href="#">About us ▾</a>
            </div>
            <div class="fergus-logo">gymgyme</div>
            <div class="fergus-nav-group">
                <a class="fergus-link" href="#">Blog</a>
                <a class="fergus-link" href="#">FAQ</a>
                <a class="fergus-link" href="#">Contact</a>
                <a class="fergus-link" href="#">FR</a>
                <a class="fergus-cta" asp-area="" asp-controller="Account" asp-action="Login">Connection</a>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebProje - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
